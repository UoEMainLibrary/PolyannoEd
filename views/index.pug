extends layout

block content
  .container
    //- pre= h.dump(data)

    .row
      .col-md-6
        - const id1 = 'UoEsha~4~4~64742~103064'
        +panel-default(`${id1}`)
          a(href=`/archive/manifest/${id1}`)
            img.img-thumbnail(src=`http://images.is.ed.ac.uk/luna/servlet/iiif/${id1}page0/full/!1024,1024/0/default.jpg`)
      .col-md-6
        - const id = 'UoEsha~4~4~65346~164252'
        +panel-default(`${id}`)
          a(href=`/archive/manifest/${id}`)
            img.img-thumbnail(src=`http://images.is.ed.ac.uk/luna/servlet/iiif/${id}page0/full/!1024,1024/0/default.jpg`)

    .block-grid-xs-2.block-grid-sm-2.block-grid-md-2
      each archive, index in archives
        .container
          +panel-default(`${archive.title}`)
            a(href=`/archive/manifest/${archive.identifier}`)
              img.img-thumbnail(src=`http://images.is.ed.ac.uk/luna/servlet/iiif/${archive.identifier}page0/full/!1024,1024/0/default.jpg`)
